                {
                    <option selected value="@item.Id">@item.Name</option>

                }
                <option selected value="@item.Id">@item.Name</option>
            }
        </select> *@
        <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.listOfCategories"></select>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>