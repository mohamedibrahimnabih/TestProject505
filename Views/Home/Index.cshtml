@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Product>

@if (TempData["success"]!=null)
{
    <h1>@TempData["success"]</h1>
}


<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
                    <div class="card">

                            <img src="~/images/@item.Img"
                                 class="card-img-top" alt="Laptop" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <p class="small"><a href="#!" class="text-muted">@item.Category.Name</a></p>
                            </div>

                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@item.Name</h5>
                                <h5 class="text-dark mb-0">@item.Price</h5>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-controller="Cart" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary" type="button">Add To Cart</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>